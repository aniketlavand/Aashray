<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= hotel.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[name]" value="<%= hotel.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="hotel[price]" value="<%= hotel.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[image]" value="<%= hotel.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[description]" value="<%= hotel.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/hotels">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>